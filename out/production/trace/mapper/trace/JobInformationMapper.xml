<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.trace.mapper.JobInformationMapper">
    
    <resultMap type="JobInformation" id="JobInformationResult">
        <result property="jobId"    column="job_id"    />
        <result property="jobName"    column="job_name"    />
        <result property="jobRemarks"    column="job_remarks"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectJobInformationVo">
        select job_id, job_name, job_remarks, create_time, update_time from trace_job_information
    </sql>

    <select id="selectJobInformationList" parameterType="JobInformation" resultMap="JobInformationResult">
        <include refid="selectJobInformationVo"/>
        <where>  
            <if test="jobName != null  and jobName != ''"> and job_name like concat('%', #{jobName}, '%')</if>
            <if test="jobRemarks != null  and jobRemarks != ''"> and job_remarks = #{jobRemarks}</if>
        </where>
    </select>
    
    <select id="selectJobInformationByJobId" parameterType="Long" resultMap="JobInformationResult">
        <include refid="selectJobInformationVo"/>
        where job_id = #{jobId}
    </select>
        
    <insert id="insertJobInformation" parameterType="JobInformation" useGeneratedKeys="true" keyProperty="jobId">
        insert into trace_job_information
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="jobName != null and jobName != ''">job_name,</if>
            <if test="jobRemarks != null">job_remarks,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="jobName != null and jobName != ''">#{jobName},</if>
            <if test="jobRemarks != null">#{jobRemarks},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateJobInformation" parameterType="JobInformation">
        update trace_job_information
        <trim prefix="SET" suffixOverrides=",">
            <if test="jobName != null and jobName != ''">job_name = #{jobName},</if>
            <if test="jobRemarks != null">job_remarks = #{jobRemarks},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where job_id = #{jobId}
    </update>

    <delete id="deleteJobInformationByJobId" parameterType="Long">
        delete from trace_job_information where job_id = #{jobId}
    </delete>

    <delete id="deleteJobInformationByJobIds" parameterType="String">
        delete from trace_job_information where job_id in 
        <foreach item="jobId" collection="array" open="(" separator="," close=")">
            #{jobId}
        </foreach>
    </delete>
</mapper>